<div class='admin_form_header'>
  <h1><%= @form_type.capitalize %> Form</h1>
</div>
<%= render 'sidebar', locals: {active_type: @form_type} %>
<div class='field-list-container'>
<!-- Need to create a form here -->
<%= form_tag admin_create_form_path(form_type: @form_type), remote: true do %>
  <div class='field-list'>
    <% @fields.each_with_index do |field, i| %>
      <%= render 'field_answer_card', {field: field, index: i} %>
    <% end %>
  </div>
  <div class='form-submit'>
    <div class='add-field-link'>
        <a class='button'> Add a field </a>
    </div>
    <%= submit_tag('Save') %>
  </div>
  <% end %>
</div>
